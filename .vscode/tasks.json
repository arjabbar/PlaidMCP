{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "run",
			"command": "dotnet",
			"type": "shell",
			"args": ["run"],
			"group": "none",
			"dependsOn": "build",
			"isBackground": false,
			"problemMatcher": ["$msCompile"],
			"options": {
				"env": {
					"PLAID_CLIENT_ID": "${input:plaidClientId}",
					"PLAID_SECRET": "${input:plaidSecret}",
					"PLAID_ENV": "sandbox"
				}
			}
		},
		{
			"label": "run-with-env",
			"command": "dotnet",
			"type": "shell",
			"args": ["run"],
			"group": "none",
			"dependsOn": "build",
			"isBackground": true,
			"problemMatcher": ["$msCompile"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	],
	"inputs": [
		{
			"id": "plaidClientId",
			"description": "Enter your Plaid Client ID",
			"default": "",
			"type": "promptString"
		},
		{
			"id": "plaidSecret",
			"description": "Enter your Plaid Secret",
			"default": "",
			"type": "promptString"
		}
	]
}